{{#unless this.isOutsideParagraph}}
  <AuCard flex={{true}} @divided={{true}} @expandable={{false}} @shadow={{true}} @size="flush" as |c|>
    <c.header class="au-u-hidden-visually">
      <AuHeading @level="3" @skin="6">{{t "title.paragraphCard"}}</AuHeading>
    </c.header>
    <c.content class="au-c-content--small">
      <AuList @divider={{true}} class="au-u-padding-top-tiny au-u-padding-bottom-tiny" as |Item|>
        <Item>
          <AuButton
            @icon="add"
            @iconAlignment="left"
            @skin="link"
            @disabled={{(not this.canMoveUp)}}
            {{on 'click' (fn this.moveParagraph true)}}>
            {{t "move.paragraphUp"}}
          </AuButton>
        </Item>
        <Item>
          <AuButton
            @icon="add"
            @iconAlignment="left"
            @skin="link"
            @disabled={{(not this.canMoveDown)}}
            {{on 'click' (fn this.moveParagraph false)}}>
            {{t "move.paragraphDown"}}
          </AuButton>
        </Item>
        <Item>
          <AuButton
            @icon="bin"
            @iconAlignment="left"
            @skin="link"
            @alert={{true}}
            @disabled={{this.isOutsideParagraph}}
            {{on 'click' this.removeParagraph}}>
            {{t "remove.paragraph"}}
          </AuButton>
        </Item>
      </AuList>
    </c.content>
  </AuCard>
{{/unless}}