{{#unless this.isOutsideArticle}}
  <AuCard @flex={{true}} @divided={{true}} @expandable={{false}} @shadow={{true}} @size="flush" as |c|>
    <c.header class="au-u-hidden-visually">
      <AuHeading @level="3" @skin="6">{{t "title.articleCard"}}</AuHeading>
    </c.header>
    <c.content class="au-c-content--small">
      <AuList @divider={{true}} class="au-u-padding-top-tiny au-u-padding-bottom-tiny" as |Item|>
        <Item>
          <AuButton
            @icon="add"
            @iconAlignment="left"
            @skin="link"
            @disabled={{not this.canMoveUp}}
            {{on 'click' (fn this.moveArticle true)}}>
            {{t "move.articleUp"}}
          </AuButton>
        </Item>
        <Item>
          <AuButton
            @icon="add"
            @iconAlignment="left"
            @skin="link"
            @disabled={{not this.canMoveDown}}
            {{on 'click' (fn this.moveArticle false)}}>
            {{t "move.articleDown"}}
          </AuButton>
        </Item>
        <Item>
          <AuButton
            @icon="bin"
            @iconAlignment="left"
            @skin="link"
            @alert={{true}}
            @disabled={{this.isOutsideArticle}}
            {{on 'click' this.removeArticle}}>
            {{t "remove.article"}}
          </AuButton>
        </Item>
      </AuList>
    </c.content>
  </AuCard>
{{/unless}}
